{
  "name": "quick-web-lookup",
  "author": "Contentstack",
  "description": "A Contentstack marketplace app that automatically extracts URLs from entry content and generates rich link previews with metadata, images, and descriptions.",
  "version": "1.0.0",
  "private": true,
  "keywords": [
    "contentstack",
    "app",
    "quick-web-lookup",
    "link-preview",
    "link-preview-generator",
    "entry-sidebar-app"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/contentstack/quick-web-lookup.git"
  },
  "bugs": {
    "url": "https://github.com/contentstack/quick-web-lookup/issues"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@contentstack/app-sdk": "^2.2.0",
    "html-react-parser": "^3.0.8",
    "jsrsasign": "^11.1.0",
    "lodash": "^4.17.21",
    "node-forge": "^1.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && npm run format",
    "lint:strict": "eslint --max-warnings=0 .",
    "build:check": "tsc -b && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview --host",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier -c .",
    "prepare": "husky install",
    "test:e2e": "npx playwright test --config=playwright.config.ts",
    "test:chrome": "npx playwright test --config=playwright.config.ts --project=Chromium",
    "test:chrome-headed": "npx playwright test --headed --config=playwright.config.ts --project=Chromium",
    "test:safari": "npx playwright test --config=playwright.config.ts --project=safari",
    "test:firefox": "npx playwright test --config=playwright.config.ts --project=firefox",
    "test:firefox-headed": "npx playwright test --headed --config=playwright.config.ts --project=firefox",
    "test:safari-headed": "npx playwright test --headed --config=playwright.config.ts --project=safari",
    "test:chrome-debug-headed": "npx playwright test --headed --config=playwright.config.ts --project=Chromium --debug"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.55.0",
    "@types/jsrsasign": "^10.5.15",
    "@types/lodash": "^4.14.202",
    "@types/node": "^24.3.0",
    "@types/node-forge": "^1.3.11",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^4.3.4",
    "dotenv": "^17.2.1",
    "eslint": "^8.56.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^2.7.1",
    "typescript": "^5.9.2",
    "vite": "^6.2.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "**/*.{json,css,scss,md,webmanifest}": [
      "prettier -w"
    ]
  }
}
